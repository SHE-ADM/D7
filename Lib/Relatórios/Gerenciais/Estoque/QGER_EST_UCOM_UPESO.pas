    QRLTotal: TQRLabel;
    QRDC_EPE_QTDE: TQRDBText;
    Excel: TQRExcelFilter;
    Word: TQRRTFFilter;
    PDF: TQRPDFFilter;
    QRLPSLQ: TQRLabel;
    QRLC_EPE_QTDE: TQRLabel;
    QRDPSBR: TQRDBText;
    QRDPSLQ: TQRDBText;
