    if RECUsuarios.Grupo = 'VEN' then
    SQL.Add('AND PK.IDCV = ''' + RECUsuarios.Id + '''');

    SQL.Add('ORDER BY PK.DTCA DESC');
    Prepare;
    Open;
  end;
end;

